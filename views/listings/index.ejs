<% layout("/layouts/boilerplate") %>
  <style>
    /* FILTERS MAIN WRAPPER */
    #filters {
      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      /* scrolling allowed */
      gap: 1.8rem;
      padding: 1rem 0;
      align-items: center;
      -ms-overflow-style: none;
      /* IE/Edge hide scrollbar */
      scrollbar-width: none;
      /* Firefox hide scrollbar */
    }

    /* Chrome/Safari scrollbar hide */
    #filters::-webkit-scrollbar {
      display: none;
    }

    .filter {
      text-align: center;
      opacity: 0.7;
      min-width: 70px;
      transition: .2s ease;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    .filter p {
      font-size: 0.8rem;
      margin-top: 0.2rem;
    }

    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      padding: 0.6rem 1rem;
      white-space: nowrap;
    }

    @media (max-width: 768px) {
      #filters {
        gap: 1rem;
      }

      .filter {
        min-width: 60px;
      }
    }
  </style>

  <div id="filters">
    <div class="filter"><i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="filter"><i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>
    <div class="filter"><i class="fa-solid fa-mountain-city"></i>
      <p>Cities</p>
    </div>
    <div class="filter"><i class="fa-solid fa-mountain"></i>
      <p>Mountains</p>
    </div>
    <div class="filter"><i class="fa-brands fa-fort-awesome"></i>
      <p>Castles</p>
    </div>
    <div class="filter"><i class="fa-solid fa-person-swimming"></i>
      <p>Pools</p>
    </div>
    <div class="filter"><i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </div>
    <div class="filter"><i class="fa-solid fa-cow"></i>
      <p>Farms</p>
    </div>
    <div class="filter"><i class="fa-regular fa-snowflake"></i>
      <p>Arctic</p>
    </div>
    <div class="filter"><i class="fa-solid fa-igloo"></i>
      <p>Domes</p>
    </div>
    <div class="filter"><i class="fa-solid fa-sailboat"></i>
      <p>Boats</p>
    </div>

    <div class="tax-toggle ms-auto">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
      </div>
    </div>
  </div>


  <div class="container mt-3">
    <!-- <h2 class="mb-4 col-6 offset-0 fw-bold">All Listings</h2> -->
    <div class="row" class="card">
      <% for (let listing of allListings) { %>
        <div class="col-md-4 col-lg-3 mb-4 d-flex align-items-stretch listing-card">
          <div class="card shadow-sm border-0 rounded-3 w-100 h-100">
            <img src="<%= listing.image.url %>" class="card-img-top rounded-top-3" alt="<%= listing.title %>"
              style="height: 200px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">
                <%= listing.title %>
              </h5>
              <p class="card-text small text-muted mb-2">
                <i class="fa-solid fa-location-dot"></i>
                <%= listing.location %>, <%= listing.country %>
              </p>

              <!-- FIXED LINE (design same, error removed, missing description handled) -->
              <p class="card-text flex-grow-1">
                <%= (listing.description || "No description available" ).substring(0, 80) %>...
              </p>

              <div class="mt-auto">
                <span class="fw-bold">â‚¹<%= listing.price.toLocaleString("en-IN")%> / night
                    <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                </span>
                <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary btn-sm float-end">View</a>
              </div>
            </div>
          </div>
        </div>
        <% } %>
    </div>
  </div>

  <script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (info of taxInfo) {
        if (info.style.display != "inline") {
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }
    })
  </script>